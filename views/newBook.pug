extends layout 

block content
  h1 New Book Form 
  form(method="POST", action="/newbook")
    label(for="name") Book Name:
    input(type="text" name="name" placeholder='Book Name')
    label(for="desc") Book Description:
    input(type="text" name="desc" placeholder='Book Description')
    label(for="category") Book Category:
    input(type="text" name="category" placeholder='Book Category')
    label(for="price") Book Price:
    input(type="number" name="price" placeholder='Book Price')
    label(for="stock") Book Stock:
    input(type="text" name="stock" placeholder='Book Stock')
    label(for="url")  Book Url:
    input(type="text" name="url" placeholder='Book Url')
    button(type="submit") Submit